@model IEnumerable<ClienteViewModel>

<h2>Clientes</h2>

<!-- Formulario de búsqueda -->
<form method="post" action="@Url.Action("Search")" class="mb-3">
    <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Buscar por nombre" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>
<a href="@Url.Action("Create")" class="btn btn-success mb-3">Crear Cliente</a>
<!-- Tabla de clientes -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombres</td>
                <td>@cliente.Apellidos</td>
                <td>@cliente.Email</td>
                <td>
                    <a href="@Url.Action("Details", new { id = cliente.Id })" class="btn btn-info btn-sm">Detalles</a>
                    <a href="@Url.Action("Edit", new { id = cliente.Id })" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

